            @Html.DisplayFor(modelItem => item.CustomerStreetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerProvince)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerPostCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerBillingMethod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |

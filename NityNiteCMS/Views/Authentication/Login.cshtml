@model ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_master.cshtml";
}
<div class="container">
    <div class="row">
        <div class="box">
            <h2>Login</h2>
            @Html.ValidationMessage("CredentialError", new { @class = "text-danger" })
            @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "text - danger" })
                </div>
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "text - danger" })
                </div>
                <div class="col-lg-12">
                    <input type="submit" name="BtnSubmit" value="Login" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
